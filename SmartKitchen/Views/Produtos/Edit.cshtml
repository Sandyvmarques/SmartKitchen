@model SmartKitchen.Models.Produtos

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm("Edit",
						"Produtos",
						FormMethod.Post,
						new { enctype = "multipart/form-data" }))

{
					@Html.AntiForgeryToken()

<div class="form-horizontal">
	<h4>Produtos</h4>
	<hr />
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	@Html.HiddenFor(model => model.Prod_ID)

	<div class="form-group">
		@Html.LabelFor(model => model.NomeProduto, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.EditorFor(model => model.NomeProduto, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.NomeProduto, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.IVAVenda, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.EditorFor(model => model.IVAVenda, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.IVAVenda, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.PrecoVenda, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.EditorFor(model => model.PrecoVenda, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.PrecoVenda, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.Stock, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.EditorFor(model => model.Stock, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.Stock, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.CategoriasFK, "CategoriasFK", htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			
			@Html.DropDownList("CategoriasFK", null, htmlAttributes: new { @class = "form-control" })
			@Html.ValidationMessageFor(model => model.CategoriasFK, "", new { @class = "text-danger" })
		</div>
	</div>
	<div class="container testimonial-group" style="overflow-x:scroll;overflow-y:hidden; height: 340px; white-space:nowrap">
		@foreach (var item in Model.ListaDeImagens)
		{
			<div style="height:320px; width:500px; margin-right:5px; display: inline-block; float: none;">
				<div style="height:320px; width:500px;">
					<img src="/Imagens/@item.Img" style="height:300px; width:500px; object-fit:cover;" />
					<p>
						@Html.ActionLink("Delete", "Delete", "Imagens", new { id = item.Imagem_ID }, null)
					</p>
				</div>
			</div>
		}
	</div>
	@Html.ActionLink("Add Imagem", "Create", "Imagens", new { ProdutosFK = Model.Prod_ID}, null)


	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" value="Save" class="btn btn-default" />
		</div>
	</div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
